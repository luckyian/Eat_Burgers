<div class="container">
  <!-- Content here -->
  <h1>Burger List</h1>
  <div class="row align-items-center">


    <div class="col">

      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Burgers to be eaten</h2>

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{!-- {{> burgers devoured=false}} --}}
            {{id}}-{{burger}}
            {{/unless}}

            {{/each}}
          </ul>
          <h2 class="card-subtitle">Add a burger</h2>
          <form id="createburger" class="button-size">
            <textarea type="text" name="burger" id="burgerName"></textarea>
            <button type="submit">Add burger!</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col">


      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{!-- {{burgers devoured=true}} --}}
        {{id}}-{{burger}}
        {{/if}}
        {{/each}}
      </ul>
      <h2>Devour a burger</h2>
      <form id="updateburger" class="button-size">
        <select name="id" id="devouredBurger">
          {{#each burgers}}
          {{#unless devoured}}
          <option value={{this.id}}>{{this.burger}}</option>
          {{/unless}}
          {{/each}}
        </select>
        {{!-- <textarea type="text" name="burger" placeholder="burger"></textarea> --}}
        <button type="submit" id="devoured">Devour it!</button>
      </form>
    </div>





    {{!--
    <script type="text/javascript">


    </script> --}}
  </div>