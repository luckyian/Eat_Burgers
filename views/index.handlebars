<div class="container">
  <!-- Content here -->
  <h1>Burger List</h1>
  <div class="row align-items-center">


    <div class="col">

      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Burgers to be eaten</h2>

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            
            {{id}}-{{burger}}
            {{/unless}}

            {{/each}}
          </ul>
          <h2 class="card-subtitle">Add a burger</h2>
       
              <form id="createburger" class="form-control">
                <textarea type="text" name="burger" id="burgerName"></textarea>
                <button type="submit" class="btn btn-success">Add burger!</button>
              </form>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Burgers that have been eaten!</h2>

          <ul>
            {{#each burgers}}
            {{#if devoured}}
           
            {{id}}-{{burger}}
            {{/if}}
            {{/each}}
          </ul>
          <h2 class="card-subtitle">Devour a burger</h2>
          <form id="updateburger" class="button-size">
            <select name="id" id="devouredBurger">
              {{#each burgers}}
              {{#unless devoured}}
              <option value={{this.id}}>{{this.burger}}</option>
              {{/unless}}
              {{/each}}
            </select>
            <button type="submit" class="btn btn-danger" id="devoured">Devour a burger!</button>
          </form>

        </div>
      </div>
    </div>





    
    <script type="text/javascript">


    </script>
  </div>