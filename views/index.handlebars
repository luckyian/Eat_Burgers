<h1>Burger List</h1>
<h2>Burgers to be eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each Burgers}}
    {{#if devoured}}
      {{> burgers devoured=true}}
    {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form id="createburger" class="button-size">
  <textarea type="text" name="burger"></textarea>
  <button type="submit">Add burger!</button>
</form>

<h2>Devour a burger</h2>
<form id="updateburger" class="button-size">
  <select name="id">
		{{#each burgers}}
			<option value="{{this.id}}">{{this.burger}}</option>
		{{/each}}
	</select>
  <textarea type="text" name="burger" placeholder="burger"></textarea>
  <button type="submit">Ate that burger!</button>
</form>

